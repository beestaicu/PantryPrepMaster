<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/darkGreen</item>
        <item name="colorControlActivated">@color/darkGreen</item>
        <item name="colorControlHighlight">@color/mediumGreen</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">

        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="android:textColorHighlight">#7fffd4</item>
        <item name="colorAccent">@color/darkGreen</item>
        <item name="colorControlNormal">@color/darkGreen</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/mediumGreen</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

    <!--custom theme items below-->
    <style name="IngredientListTitle">
        <item name="android:textColor">@color/PantryBlack</item>
        <item name="android:textSize">@dimen/text_ingredient_title</item>
        <!--<item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#888</item>-->
        <item name="android:textStyle">bold</item>
    </style>
    <style name="IngredientListDetail">
        <item name="android:textColor">@color/PantryBlack</item>
        <item name="android:textSize">@dimen/text_ingredient_detail</item>
        <!--<item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#888</item>-->
    </style>

    <style name="RecipeListTitle">
        <item name="android:textColor">@color/PantryBlack</item>
        <item name="android:textSize">@dimen/text_recipe_list_title</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RecipeListDetail">
        <item name="android:textColor">@color/PantryBlack</item>
        <item name="android:textSize">@dimen/text_ingredient_detail</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="RecipeDetailTitle">
        <item name="android:textColor">@color/PantryBlack</item>
        <item name="android:textSize">@dimen/text_recipe_detail_title</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RecipeDetailDetail">
        <item name="android:textColor">@color/PantryBlack</item>
        <item name="android:textSize">@dimen/text_recipe_detail_detail</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>
    <style name="RecipeDetailIngredients">
        <item name="android:textColor">@color/PantryBlack</item>
        <item name="android:textSize">@dimen/text_recipe_detail_ingredients</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="NutritionTitle">
        <item name="android:textColor">@color/PantryWhite</item>
        <item name="android:textSize">@dimen/text_nutrition_detail_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/PantryJetBlack</item>
        <item name="android:textAlignment">center</item>


    </style>
    <style name="NutritionLabel">
        <item name="android:textColor">@color/PantryJetBlack</item>
        <item name="android:textSize">@dimen/text_nutrition_detail_label</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>

    </style>
    <style name="NutritionAmount">
        <item name="android:textColor">@color/PantryJetBlack</item>
        <item name="android:textSize">@dimen/text_nutrition_detail_amount</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="IngredientsFilterTitle">
        <item name="android:textColor">@color/PantryBlack</item>
        <item name="android:textSize">@dimen/text_ingredients_filter_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IngredientsFilterDetail">
        <item name="android:textColor">@color/PantryBlack</item>
        <item name="android:textSize">@dimen/text_ingredients_filter_detail</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="IngredientsAddTitle">
        <item name="android:textColor">@color/PantryBlack</item>
        <item name="android:textSize">@dimen/text_ingredients_add_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IngredientsAddDetail">
        <item name="android:textColor">@color/PantryBlack</item>
        <item name="android:textSize">@dimen/text_ingredients_add_detail</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="IngredientsDeleteTitle">
        <item name="android:textColor">@color/PantryBlack</item>
        <item name="android:textSize">@dimen/text_ingredients_delete_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IngredientsDeleteDetail">
        <item name="android:textColor">@color/PantryBlack</item>
        <item name="android:textSize">@dimen/text_ingredients_delete_detail</item>
        <item name="android:textStyle">italic</item>
    </style>




    <style name="action_bar">
        <item name="android:background">@color/PantryOrange</item>
        <item name="background">@color/PantryOrange</item>
    </style>

    <!--drawer pieces-->
    <style name="drawer">
        <item name="android:background">@color/PantryGreen</item>
        <item name="background">@color/PantryGreen</item>
    </style>

    <style name="drawerDetail">
        <item name="android:textColor">@color/PantryGreen</item>
        <item name="android:textSize">@dimen/text_drawer_detail</item>
    </style>

    <style name="drawerHeader">
        <item name="android:textColor">@color/PantryBlack</item>
        <item name="android:textSize">@dimen/text_drawer_header</item>
    </style>



</resources>
